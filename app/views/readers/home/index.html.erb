<div class="row">

  <% @posts.each do |post| %>

  <!-- Cards for each published Post ordered by most recent -->

        <div class="col-md-6 col-lg-4">
          <div class="card reader-card mt-3 mb-3">

              <% if post.header_image.present? %>
                  <%= image_tag post.header_image, class: "card-img-top header-img" %>
              <% end %>

              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= post.title %></h5>
                <p class="card-text"><%= truncate(post.description, length: 140) %></p>
                <a href="#" class="btn btn-primary mt-auto">Read Post</a>
              </div>
          </div>

        </div>
  <% end %>

</div>
